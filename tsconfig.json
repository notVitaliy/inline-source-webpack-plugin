{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "lib": ["es6"],
    "outDir": "./dist",
    "declaration": true
  },
  "types": ["node"],
  "exclude": ["node_modules", "dist"]
}
